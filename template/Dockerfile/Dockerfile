#{FROM}

ENV BUILDING=yes \
	PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/data/scripts:/sbin:/bin:/data/node_modules/.bin:./node_modules/.bin \
	RUN_IN_DOCKER=yes \
	@{CHINA_ENVIRONMENTS} \
	@{NETWORKING_ENVIRONMENTS}

#{CUSTOM_SYSTEM_INSTALL}

RUN mkdir -p /data
WORKDIR /data

# --> ? COPY .micro-build/bin/* /usr/local/bin

#{PLUGINS_NPM_INSTALL}
#{NPM_INSTALL_INSTRUCTIONS}
#{JSPM_INSTALL_INSTRUCTIONS}

#{VOLUMES}
#{PORTS}

#{JSON_ENV_PASS}
#{ENVIRONMENT_VARS}
#{BUILD_ARGUMENTS}

#{CUSTOM_BUILD_BEFORE}

#{LABEL_INSTRUCTIONS}

ENTRYPOINT [@{SHELL}]
CMD [@{COMMAND}${COMMAND_LINE_ARGS}]

COPY . /data

#{COMPILE_PLUGIN}

#{CUSTOM_BUILD_AFTER}

ENV BUILDING=no HTTP_PROXY="" HTTPS_PROXY=""
