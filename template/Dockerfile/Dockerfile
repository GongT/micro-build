#{FROM}

ENV BUILDING=yes \
	PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/data/scripts:/sbin:/bin \
	RUN_IN_DOCKER=yes \
	@{NETWORKING_ENVIRONMENTS}

RUN mkdir -p /data
WORKDIR /data

#{PLUGINS_NPM_INSTALL}
#{NPM_INSTALL_INSTRUCTIONS}

#{VOLUMES}
#{PORTS}

#{JSON_ENV_PASS}
#{ENVIRONMENT_VARS}
#{BUILD_ARGUMENTS}

#{CUSTOM_BUILD_BEFORE}

#{LABEL_INSTRUCTIONS}

ENTRYPOINT [@{SHELL}]
CMD [@{COMMAND}${COMMAND_LINE_ARGS}]

COPY . /data

#{COMPILE_PLUGIN}

#{CUSTOM_BUILD_AFTER}

ENV BUILDING=no
